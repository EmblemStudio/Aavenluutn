{
  "name": "@aavenluutn/contracts",
  "version": "0.0.1-dev",
  "description": "Story collection publishing and auction contracts",
  "main": "index.js",
  "author": "Emblem Studio",
  "license": "Apache-2.0",
  "scripts": {
    "up": "yarn build && npx hardhat node",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js",
    "new-narrator": "npx hardhat run scripts/newNarrator.js",
    "build": "npx hardhat compile && yarn get-abi && yarn get-bin",
    "get-abi": "yarn get-abi:nft && yarn get-abi:pub",
    "get-bin": "yarn get-bin:nft && yarn get-bin:pub",
    "get-abi:pub": "cat artifacts/contracts/Publisher.sol/Publisher.json | jq .abi > artifacts/contracts/Publisher.sol/Publisher.abi",
    "get-bin:pub": "cat artifacts/contracts/Publisher.sol/Publisher.json | jq -r .bytecode > artifacts/contracts/Publisher.sol/Publisher.bin",
    "get-abi:nft": "cat artifacts/contracts/NarratorNFTs.sol/NarratorNFTs.json | jq .abi > artifacts/contracts/NarratorNFTs.sol/NarratorNFTs.abi",
    "get-bin:nft": "cat artifacts/contracts/NarratorNFTs.sol/NarratorNFTs.json | jq -r .bytecode > artifacts/contracts/NarratorNFTs.sol/NarratorNFTs.bin"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.2",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.6.4",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16"
  }
}
